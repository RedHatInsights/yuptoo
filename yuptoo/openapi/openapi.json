{
    "openapi": "3.1.0",
    "info": {
        "title": "Yuptoo API",
        "description": "Flask API for Yuptoo Service",
        "contact": {},
        "license": {
            "name": "GPLv3",
            "url": "https://www.gnu.org/licenses/gpl-3.0.en.html"
        },
        "version": "v1"
    },
    "paths": {
        "/status": {
            "get": {
                "summary": "Provides endpoint for server status",
                "description": "Server status and setup information.",
                "operationId": "serverStatus",
                "security": [],
                "responses": {
                    "200": {
                        "description": "Server status",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ServerStatus"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ServerStatus": {
                "required": [
                    "status"
                ],
                "properties": {
                    "status": {
                        "type": "string"
                    }
                }
            },
            "Error": {
                "properties": {
                    "errors": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "example": {
                                "detail": "Unexpected error. See logs.",
                                "status": 500
                            }
                        }
                    }
                }
            }
        }
    }
}
